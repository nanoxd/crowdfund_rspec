<article>
  <header>
    <%= image_tag(@project.image_file_name) %>
    <h1><%= @project.name %></h1>
  </header>
  <h2>Description</h2>
  <p>
    <%= @project.description %>
  </p>
  <h3>Target Pledge Amount</h3>
  <p>
    <%= number_to_currency(@project.target_pledge_amount) %>
  </p>
  <h3>Website</h3>
  <p>
    <%= link_to @project.website, @project.website %>
  </p>
  <h3>Pledging Ends</h3>
  <p>
    <%= format_pledging_ends_on(@project) %> remaining
  </p>
  <h3>Team Members</h3>
  <p>
    <%= @project.team_members %>
  </p>

</article>

<%= link_to "Edit", edit_project_path(@project) %> |
<%= link_to "Delete", project_path(@project), method: :delete, data: {
              confirm: "Are you sure?" }  %>
