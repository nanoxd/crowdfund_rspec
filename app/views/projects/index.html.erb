<h1><%= pluralize(@projects.size, 'Project') %></h1>


<% @projects.each do |project| %>
  <article>
    <header>
      <%= image_tag(project.image_file_name) %>
      <h2><%= link_to project.name, project %></h2>
    </header>
    <p>
      <%= truncate(project.description, length: 40, separator: ' ') %>
    </p>
    <table>
      <tr>
        <th>Pledging Ends On:</th>
        <td><%= format_pledging_ends_on(project) %></td>
      </tr>
      <tr>
        <th>Website:</th>
        <td><%= link_to project.website, project.website %></td>
      </tr>
      <tr>
        <th>Target Pledge Amount:</th>
        <td><%= number_to_currency(project.target_pledge_amount) %></td>
      </tr>
    </table>
  </article>
<% end %>
